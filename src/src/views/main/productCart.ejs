<%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>    
    <div class="cuerpo">
      <div class="encabezado">
        <img src="/icons/carrito-de-compras.svg" width="22px" height="22px" />
        <p>Carrito</p>
      </div>
      <% if(locals && locals.addedProducts) { %>
        <% addedProducts.forEach( addedProduct => { %>
        <div class="contenido" style="background-color: rgb(243, 242, 242)">
          <div class="album info">
            <a href="/productos/<%= addedProduct.id %>"><img class="img" src="/images/registeredProducts/<%= addedProduct.image %>" alt="Imagen del producto Añadido, <%= addedProduct.name + ' de ' + addedProduct.artist %>"/></a>
          </div>
          <div class="info">
            <h2 class="datos"><%= addedProduct.name  %></h2>
            <p class="datos"><%= addedProduct.artist %></p>
            <p class="datos"><strong>$<%= addedProduct.price %></strong></p>
          </div>
          <div class="cantidad">
            <label for="cantidad-discos">Cantidad</label>
            <select name="cantidad-discos" id="cantidad-discos">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
            </select>
            <br />
            <i class="far fa-trash-alt eliminar"></i>
          </div>
        </div>
        <% }) %>
      <% } else { %>
        <h2>Ningun producto ha sido añadido todavía.</h2>
      <% } %>
      <div class="prueba">

        <% if(locals && locals.addedProducts) { %>
        <div class="cupon">
          <h2>Cupón</h2>
          <br />
          <div class="codigo">
            <input type="text" placeholder="ingresa el cupón" />
            <button>Aplicar</button>
          </div>
        </div>
        <% } %>

        <div class="subtotal">
          <h2>Subtotal</h2>
          <br />
          <div class="precio">
            <% if(locals && locals.totalPrice) { %>
              <p><strong>$<%= totalPrice %></strong></p>
              <button>Pagar</button>
            <% } else { %>
              <p><strong>$0.00</strong></p>
              <form action="/productos" method="GET">
                <button type="submit">Comprar</button>
              </form>
            <% } %>
          </div>
        </div>

      </div>

    </div>
    <%- include('../partials/footer') %>
  </body>
</html>