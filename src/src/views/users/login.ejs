<%- include('../partials/head') %>
<body>
    <a class="central-logo" href="/"><img class="central-BMG" src="/images/logoBMG.png" alt="Logo del Sitio E-commerceBGG"></a> <!--<i class="fas fa-compact-disc"></i>-->
    <div id="main">
      <section id="login-and-text-container">
          <h1>Iniciar Sesión</h1>
          <form id="login" action="/usuario/perfil" method="POST">
              <article>
                  <label for="email">Correo electrónico :</label>
                  <input type="text" name="email" id="email" value="<%= locals.email && email ? email : '' %>">
                  <div class="error-email"></div>
              </article>
              <article>
                  <label for="password">Contraseña :</label>
                  <input type="password" name="password" id="password">
                  <div id="error-password"></div>
              </article>
              <% if(locals && locals.errors) { %>
              <% errors.forEach( error => { %>
              <br><p id="error">*<%= error.msg %></p>
              <%  }) %>
              <% } %>
              <article id="remember-general">
                <label for="remember" id="label-remember">Recordar usuario y contraseña :</label>
                <input type="checkbox" name="recuerdame" id="remember">
                </article>
              <button type="submit" id="submit-button">Iniciar Sesión</button>
          </form>
          <p>¿Olvidaste la contraseña? <a class="password-forgotten-and-create" href="#" target="_blank"><br>Recuperar contraseña ></a></p>
          <p>¿No tienes una cuenta? <a class="password-forgotten-and-create" href="/usuario/registro">Crear cuenta ></a></p>
      </section>
    </div>
    <%- include('../partials/footer') %>
    <script src="../../../js/validations/loginValidation.js"></script>
</body>
</html>